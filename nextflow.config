  name                = "RRBS DBP spleen analysis"
  description         = "..."
  author              = "Andrey HÃ¶glund"
  homePage            = "https://github.com/flerpan01"
  doi                 = "paper..."
  version             = "1.0"
  mainScript          = "main.nf"
}